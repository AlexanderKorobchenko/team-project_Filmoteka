<div class='modal__backdrop'></div>

<div class="frame__container hidden"></div>


<div class='modal__container'>
  <div class='film__image'>
    {{#if poster_path}}
    <img class='image' src='https://www.themoviedb.org/t/p/w500{{poster_path}}'
      onerror="this.onerror=null;this.src='https://raw.githubusercontent.com/AlexanderKorobchenko/team-project_Filmoteka/main/src/images/error/no-image-available.webp'"
      alt='{{title}}' title='{{title}}' />
    {{/if}}
    {{#unless poster_path}}
    <img class='image'
      src='https://raw.githubusercontent.com/AlexanderKorobchenko/team-project_Filmoteka/main/src/images/error/no-image-available.webp'
      alt='film photo' style='border:2px solid #ff6b08' />
    {{/unless}}
  </div>

  <div class='film__information'>
    <div>
      <h2 class='film__title'>{{title}}</h2>
      <ul>
        <li class='film__item'>
          <p class='film__details'>Vote / Votes</p>
          <p class='film__info--uper'>
            <span class='film__rating--orange'>{{vote_average}}</span>
            <span class='film__rating--divider'> / </span>
            <span>{{vote_count}}</span>
          </p>
        </li>
        <li class='film__item'>
          <p class='film__details'>Popularity</p>
          <p class='film__info--uper'>{{popularity}}</p>
        </li>
        <li class='film__item'>
          <p class='film__details'>Original title</p>
          <p>{{original_title}}</p>
        </li>
        <li class='film__item'>
          <p class='film__details'>Genre</p>
          <p class='film__info'>
            {{#if genres}}
            {{#each genres}}
            <span>{{this.name}}{{#unless @last}},{{/unless}}</span>
            {{/each}}
            {{else}}<span>N/A</span>
            {{/if}}
          </p>
        </li>
      </ul>
    </div>
    <div>
      <h3 class='film__about__title'>About</h3>
      <p class='film__about__text'>
        {{overview}}
      </p>
    </div>
    <div class='film__button__wrapper'>
      <button type='button' class='film__button btn__watch' data-id='{{id}}'>Add to watched</button>
      <button type='button' class='film__button btn__queue' data-id='{{id}}'>Add to queue</button>
      <button type='button' class='film__button' id="trailer" data-id='{{id}}'>trailer</button>
    </div>
    <button type='button' class='close__button' data-action='close-modal'></button>
  </div>

</div>